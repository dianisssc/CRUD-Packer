<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-name">Name</label>
            <input type="text" id="example-name" class="form-control" aria-describedby="example-name" placeholder="Enter Example Name">
          </div>
          <div class="form-group">
            <label for="example-password">Password</label>
            <textarea class="form-control" id="example-password" aria-describedby="example-password" placeholder="Enter Example Password"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="update-name">Update Name</label>
            <input type="text" id="update-name" class="form-control" aria-describedby="update-name" placeholder="Enter Example Name">
          </div>
          <div class="form-group">
            <label for="update-id">id</label>
            <textarea class="form-control" id="update-id" aria-describedby="update-id" placeholder="Enter Update ID"></textarea>
          </div>
          <button id="submit-update" class="btn btn-primary float-right">Submit</button>
        </form>

        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each boxColl}}
          <li data-id="{{this._id}}" class="list-group-item">
            <a href="example/{{this._id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>