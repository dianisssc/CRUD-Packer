    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create Collection</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="example-name">Name</label>
                <input type="text" id="example-name" class="form-control" aria-describedby="example-name"
                  placeholder="Enter Example Name">
              </div>
              <div class="form-group">
                <label for="example-password">Set Password</label>
                <textarea class="form-control" id="example-password" aria-describedby="example-password"
                  placeholder="Enter Example Password"></textarea>
              </div>
            </form>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button class="btn btn-lg btn-danger" id="create-form-submit"><span
                class="fa fa-credit-card"></span>Submit</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Manage Modal -->
    <div class="modal fade" id="manageModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Manage Collection</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="collection-name">Collection Name</label>
                <input type="text" id="collection-name" class="form-control" aria-describedby="update-name"
                  placeholder="Enter Name">
              </div>
              <div class="form-group">
                <label for="collection-password">Password</label>
                <textarea class="form-control" id="collection-password" aria-describedby="collection-password"
                  placeholder="Enter Password"></textarea>
              </div>

            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button class="btn btn-lg btn-danger" id="mng-form-submit"><span
                class="fa fa-credit-card"></span>Submit</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Manage Collection</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="update-name">Search By ID</label>
                <input type="text" id="update-name" class="form-control" aria-describedby="update-name"
                  placeholder="Enter Example Name">
              </div>
              <div class="form-group">

              </div>

            </form>
          </div>
          <div class="modal-footer">
            <button class="btn btn-lg btn-danger" id="boxID-form-submit"><span class="fa fa-credit-card"></span>Search
              By ID</button>
            <button class="btn btn-lg btn-danger" id="barcode-form-submit"><span class="fa fa-credit-card"></span>Search
              By Barcode</button>
          </div>
        </div>
      </div>
    </div>
  </div>


