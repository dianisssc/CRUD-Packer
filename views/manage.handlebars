<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <form class="clearfix mb-4" action="POST">
                        <div class="form-group">
                            <label for="update-name">Edit Name</label>
                            <input type="text" id="update-name" class="form-control" aria-describedby="update-name"
                                placeholder="Edit Collection Name">
                        </div>
                        <div class="form-group">

                            <button type="button" id="submit-update" class="btn btn-primary">Submit</button>
                    </form>
                   <button type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#newBoxModal">Add a Box</button>
                    <div class="row">
                        <div class="col-8 offset-2">
                            <h3>Boxes:</h3>
                            <ul id="example-list" class="list-group">
                                {{#each boxColl}}
                                <li data-id="{{this._id}}" class="list-group-item">
                                    <a href="example/{{this._id}}">{{this.name}}</a>
                                    <button class="btn btn-danger float-right delete">ｘ</button>
                                    <button class="btn btn-danger float-left view">ｘ</button>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- New Box Modal -->
<div class="modal fade" id="newBoxModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create a Box</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="update-name">Box Name</label>
                        <input type="text" id="update-name" class="form-control" aria-describedby="update-name"
                            placeholder="Enter Example Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Box Contents</label>
                        <textarea class="form-control" id="boxContent" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-lg btn-danger" id="mng-form-submit"><span class="fa fa-credit-card"></span>Submit</button>
            </div>
        </div>
    </div>
</div>
</div>